datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Evento {
  id              Int    @id @default(autoincrement())
  nomeEvento      String
  dataEvento      String
  horaInicio      String
  horaFim         String
  categoriaEvento String
  localEvento     String
  descricaoEvento String @db.Text
}

model Voluntario {
  id            Int     @id @default(autoincrement())
  nome          String
  dataNacimento String
  telefone      String
  email         String  @unique
  areaAtuacao   String
  senha         String
  admin         Boolean
}
